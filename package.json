{
  "name": "judithromero-task-2018",
  "version": "1.0.0",
  "description": "",
  "private": true,
  "scripts": {
    "test": "npm run lint:eslint && npm run lint:tscheck",
    "lint:eslint": "eslint --ext .ts,.tsx src test",
    "lint:tscheck": "tsc -p src/server --noEmit && tsc -p src/client --noEmit && tsc -p test --noEmit",
    "dev": "tsnd --respawn --transpileOnly -r dotenv/config -P src/server/tsconfig.json src/server/dev.ts",
    "build": "npm run build:server && npm run build:static && npm run build:client",
    "build:static": "copyfiles -u 2 src/server/static/* build",
    "build:server": "tsc -p src/server",
    "build:client": "webpack --config src/client/webpack.config.js",
    "rebuild": "rimraf build && npm run build",
    "start": "node ./build",
    "restart": "npm run rebuild && node -r dotenv/config ./build",
    "mocha": "mocha -r test/ts-hook test/**/*.spec.ts",
    "deploy": "heroku container:login && heroku container:push web -a judithromero-task-2018 && heroku container:release web -a judithromero-task-2018"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run lint:tscheck"
    }
  },
  "lint-staged": {
    "*.ts": "eslint",
    "*.tsx": "eslint"
  },
  "keywords": [],
  "author": "judithromero",
  "license": "UNLICENSED",
  "dependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/express": "^4.16.1",
    "@types/react": "^16.8.17",
    "@types/react-dom": "^16.8.4",
    "@types/sequelize": "^4.27.46",
    "bcrypt": "^3.0.6",
    "connect-history-api-fallback": "^1.6.0",
    "cookie-parser": "^1.4.4",
    "cookie-session": "^1.3.3",
    "copyfiles": "^2.1.0",
    "css-loader": "^2.1.1",
    "express": "^4.18.2",
    "file-loader": "^3.0.1",
    "html-webpack-plugin": "^3.2.0",
    "latin-to-cyrillic": "^1.0.1",
    "mini-css-extract-plugin": "^0.6.0",
    "pg": "^7.9.0",
    "pg-hstore": "^2.3.2",
    "random-words": "^1.1.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-router-dom": "^5.0.0",
    "sequelize": "^5.7.1",
    "style-loader": "^0.23.1",
    "ts-loader": "^6.0.1",
