{
  "name": "task1",
  "version": "1.0.0",
  "description": "",
  "private": true,
  "scripts": {
    "test": "npm run lint:eslint && npm run tscheck",
    "lint:eslint": "eslint --ext .ts src",
    "tscheck": "tsc -p . --noEmit",
    "dev": "tsnd --respawn --transpileOnly -r dotenv/config ./src/index.ts",
    "build": "tsc && copyfiles -u 1 src/static/* src/views/* build",
    "rebuild": "rimraf build && npm run build",
    "start": "node ./build"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run tscheck"
    }
  },
  "lint-staged": {
    "*.ts": "eslint"
  },
  "keywords": [],
  "author": "",
  "license": "UNLICENSED",
  "dependencies": {
    "@types/express": "^4.16.1",
    "@types/hbs": "^4.0.1",
    "@types/sequelize": "^4.27.46",
    "copyfiles": "^2.1.0",
    "express": "^4.16.4",
    "hbs": "^4.0.3",
    "pg": "^7.9.0",
    "pg-hstore": "^2.3.2",
    "sequelize": "^5.2.12",
    "typescript": "^3.4.2"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^1.6.0",
    "@typescript-eslint/parser": "^1.6.0",
    "dotenv": "^7.0.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.16.0",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.5",
    "rimraf": "^2.6.3",
    "ts-node-dev": "^1.0.0-pre.32"
  }
}
